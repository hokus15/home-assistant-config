##############################
# Valle tariff
# Starting at 23 in summer
# Starting at 22 in winter
##############################
- alias: 'Energy - Tariff - Valle start summer'
  trigger:
    - platform: time
      at: '23:00:00'
  condition:
    - condition: state
      entity_id: 'binary_sensor.summer_time'
      state: 'on'
  action:
    - service: mqtt.publish
      data:
        topic: 'home/sensor/energy/tariff'
        retain: true
        qos: 0
        payload_template: 'Valle'